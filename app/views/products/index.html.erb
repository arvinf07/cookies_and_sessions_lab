<h1>Cart</h1>
<% if session[:cart] %>
  <% session[:cart].each do |item| %>
    <%= item %><br>
  <% end %>  
<% end %>
<h2>Add New Item</h2>

<%= form_tag('/') do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= text_field_tag 'product' %>
  <%= submit_tag "add to cart"  %>
<% end %>  